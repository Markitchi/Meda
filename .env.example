# Environment Variables Template
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgresql://meda_user:meda_password_2024@localhost:5432/meda_db
POSTGRES_USER=meda_user
POSTGRES_PASSWORD=meda_password_2024
POSTGRES_DB=meda_db

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=meda_minio
MINIO_SECRET_KEY=meda_minio_password_2024
MINIO_BUCKET_NAME=meda-medical-images

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=Meda
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@meda.app

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Meda
